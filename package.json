{
  "name": "oriolcastro.me",
  "version": "1.0.0",
  "private": false,
  "description": "My personal blog",
  "type": "module",
  "scripts": {
    "build": "astro build",
    "postbuild": "pagefind --site dist",
    "build:pagefind": "astro build && pagefind --site dist --output-path public/pagefind",
    "check": "tsc -noEmit",
    "dev": "astro dev",
    "format": "prettier -w \"**/*\" \"!**/*.{md,mdx}\" --ignore-unknown --cache",
    "lint": "oxlint",
    "prepare": "is-ci || pnpm exec simple-git-hooks",
    "preview": "astro preview",
    "start": "astro dev"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged",
    "commit-msg": "pnpm exec commitlint --edit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "oxlint --fix",
      "pnpm run format --"
    ],
    "package.json": "sort-package-json"
  },
  "dependencies": {
    "@astrojs/mdx": "4.3.13",
    "@astrojs/rss": "4.0.14",
    "@astrojs/sitemap": "3.6.0",
    "@astrojs/solid-js": "^5.1.3",
    "astro": "5.16.6",
    "astro-expressive-code": "0.41.5",
    "astro-icon": "1.1.5",
    "astro-robots-txt": "1.0.0",
    "cheerio": "1.1.2",
    "hastscript": "9.0.1",
    "mdast-util-directive": "3.1.0",
    "mdast-util-to-markdown": "2.1.2",
    "mdast-util-to-string": "4.0.0",
    "rehype-external-links": "3.0.0",
    "rehype-unwrap-images": "1.0.0",
    "remark-directive": "4.0.0",
    "satori": "0.18.3",
    "satori-html": "0.3.2",
    "sharp": "0.34.5",
    "solid-js": "^1.9.10",
    "unified": "11.0.5",
    "unist-util-visit": "5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@iconify-json/lucide": "1.2.82",
    "@iconify-json/simple-icons": "^1.2.19",
    "@pagefind/default-ui": "1.4.0",
    "@resvg/resvg-js": "2.6.2",
    "@tailwindcss/typography": "0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@types/hast": "3.0.4",
    "@types/mdast": "4.0.4",
    "is-ci": "4.1.0",
    "lint-staged": "16.2.7",
    "oxlint": "^1.35.0",
    "pagefind": "1.4.0",
    "prettier": "3.7.4",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "reading-time": "1.5.0",
    "simple-git-hooks": "2.13.1",
    "sort-package-json": "3.6.0",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3",
    "typescript-eslint": "8.50.1"
  },
  "packageManager": "pnpm@10.26.2",
  "pnpm": {
    "overrides": {
      "array-includes": "npm:@nolyfill/array-includes@latest",
      "array.prototype.flat": "npm:@nolyfill/array.prototype.flat@latest",
      "array.prototype.flatmap": "npm:@nolyfill/array.prototype.flatmap@latest",
      "has": "npm:@nolyfill/has@latest",
      "object.assign": "npm:@nolyfill/object.assign@latest",
      "object.entries": "npm:@nolyfill/object.entries@latest",
      "object.fromentries": "npm:@nolyfill/object.fromentries@latest",
      "object.values": "npm:@nolyfill/object.values@latest"
    }
  }
}
