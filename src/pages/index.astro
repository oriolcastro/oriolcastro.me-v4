---
import { getEntry } from 'astro:content'

import PostPreview from '@/components/blog/PostPreview'
import SocialList from '@/components/SocialList'
import TimelineItem from '@/components/timeline/TimelineItem'
import PageLayout from '@/layouts/Base'
import { getAllPosts, getAllTimeline, sortMDByDate, sortTimelineDescByYear } from '@/utils'

const MAX_POSTS = 10
const MAX_TIMELINE_ITEMS = 2
const allPosts = await getAllPosts()
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS)
const allTimelineItems = await getAllTimeline()
const allTimelineItemsByDate = sortTimelineDescByYear(allTimelineItems).slice(0, MAX_TIMELINE_ITEMS)

const cactusTech: Array<{ title: string; desc: string; href: string }> = [
  {
    title: 'Astro',
    desc: 'Build fast websites, faster.',
    href: 'https://astro.build',
  },
  {
    title: 'Astro Assets',
    desc: 'Built-in optimized asset support.',
    href: 'https://docs.astro.build/en/guides/assets/',
  },
  {
    title: 'Tailwind CSS',
    desc: 'Rapidly build modern websites without ever leaving your HTML.',
    href: 'https://tailwindcss.com',
  },
  {
    title: 'Markdown',
    desc: 'Simple and easy-to-use markup language.',
    href: 'https://www.markdownguide.org/',
  },
  {
    title: 'MDX',
    desc: 'Markdown for the component era.',
    href: 'https://mdxjs.com/',
  },
  {
    title: 'Satori',
    desc: 'Generating png Open Graph images for blog posts.',
    href: 'https://github.com/vercel/satori',
  },
  {
    title: 'Pagefind',
    desc: 'A fully static search library.',
    href: 'https://pagefind.app/',
  },
  {
    title: 'Astro Icon',
    desc: 'An easy to use Icon component for Astro.',
    href: 'https://github.com/natemoo-re/astro-icon#readme',
  },
]

const { data: status } = await getEntry('status', 'current')
---

<PageLayout meta={{ title: 'Home' }}>
  <section>
    <h1 class="title mb-6">üôãüèº‚Äç‚ôÇÔ∏è Hi! I'm Oriol</h1>
    <p class="mb-2">
      A product engineer from Barcelona, currently focused on the frontend web platform.
    </p>
    <p class="mb-4">
      Here I write about personal projects, my programming career, and any new cool tech I find.
    </p>
    <SocialList />
  </section>
  <section aria-label="Current status" class="mt-16">
    <h2 class="title mb-4 text-xl">Status</h2>
    <p class="mb-2">
      {
        status.company ? (
          <>
            Working as a ${status.company.title} at{' '}
            <a href={status.company.url} target="_blank" rel="noopener noreferrer">
              {status.company.name}
            </a>
          </>
        ) : (
          'üîç Looking for my new challenge'
        )
      } and {status.interest}
    </p>
  </section>
  <section aria-label="Blog post list" class="mt-16">
    <h2 class="title mb-4 text-xl">Posts</h2>
    <ul class="space-y-4 sm:space-y-2">
      {
        allPostsByDate.map(p => (
          <li class="flex flex-col gap-x-2 sm:flex-row">
            <PostPreview post={p} />
          </li>
        ))
      }
    </ul>
  </section>
  <section aria-label="Programmer carrer timeline" class="mt-16">
    <h2 class="title mb-4 text-xl">Timeline</h2>
    <a href="/timeline" class="cactus-link mt-4" rel="prefetch">See all I've done</a>
    {allTimelineItemsByDate.map(item => <TimelineItem item={item} />)}
  </section>
