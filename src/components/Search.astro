---
import SiteSearch from '@/components/solid/SiteSearch'
---

<SiteSearch client:load />

<style is:global>
  /* Custom search result styling to match the previous design */
  .search-result {
    border-bottom: 1px solid rgb(228 228 231 / 0.2);
  }

  .search-result:last-child {
    border-bottom: none;
  }

  .search-result-link {
    background-size: 100% 6px;
    background-position: bottom;
    background-repeat: repeat-x;
    background-image: linear-gradient(
      transparent,
      transparent 5px,
      var(--color-text-color) 5px,
      var(--color-text-color)
    );
  }

  .search-result-link:hover {
    text-decoration: none;
    background-image: linear-gradient(
      transparent,
      transparent 4px,
      var(--color-link) 4px,
      var(--color-link)
    );
  }

  .search-result mark,
  .search-results mark {
    color: var(--color-quote);
    background-color: transparent;
    font-weight: 600;
  }

  /* Scrollbar styling for search results */
  .search-results::-webkit-scrollbar {
    width: 8px;
  }

  .search-results::-webkit-scrollbar-track {
    background: transparent;
  }

  .search-results::-webkit-scrollbar-thumb {
    background: rgb(161 161 170 / 0.3);
    border-radius: 4px;
  }

  .search-results::-webkit-scrollbar-thumb:hover {
    background: rgb(161 161 170 / 0.5);
  }
</style>
