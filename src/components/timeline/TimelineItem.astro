---
import { type CollectionEntry, render } from 'astro:content'

import TextLink from '@/components/TextLink.astro'
import TimelineItemContent from '@/components/timeline/TimelineItemContent.astro'
import TimelineItemTitle from '@/components/timeline/TimelineItemTitle.astro'

interface Props {
  item: CollectionEntry<'timeline'>
}
const { item } = Astro.props

const { Content } = await render(item)
---

<h3 class="my-3 text-lg font-bold" id={item.data.year.toString()}>
  <a href={`#${item.data.year}`} class="hover:text-accent transition-colors">
    {item.data.year}
  </a>
</h3>
<div class="border-accent flex flex-col border-l-2">
  <Content components={{ h1: TimelineItemTitle, p: TimelineItemContent, a: TextLink }} />
</div>
